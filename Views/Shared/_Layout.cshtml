<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARBOL 2-3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main>
        <header>
            <div class="px-3 py-2 bg-dark text-light">
                <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                        <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-dark text-decoration-none">
                            <img src="~/imgs/logo-w-4.png" class="w-50 py-3" />
                        </a>
                        <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                            <li>
                                <a class="nav-link text-dark" asp-controller="Vehiculos" asp-action="Menu">
                                    Menú
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Vehiculos" asp-action="Index" class="nav-link text-light">
                                    Vehiculos 
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Vehiculos" asp-action="Create" class="nav-link text-light">
                                    Carga Manual
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Vehiculos" asp-action="CargarArchivo" class="nav-link text-light">
                                    Carga por CSV
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="b-example-divider"></div>
    </main>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="/docs/5.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>