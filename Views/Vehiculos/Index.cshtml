@model IEnumerable<LAB04_ED1.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center display-3">Registro de Vehiculos Actuales</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Nuevo Vehiculo</a>
</p>

<h3 class=" text-start display-6"> Busqueda</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarPlaca" method="post" class="mb-3 row">
            <div class="col-md-9 mx-0 px-0">
                <input name="Placa" type="search" class="form-control" placeholder="Placa" />
            </div>
            <div class="col-md-3 mx-0 px-0">
                <button type="submit" class="btn btn-outline-success">Buscar</button>
            </div>
        </form>
    </div>
    <div class="col-md-4 ">
        <form asp-action="BuscarColor" method="post" class="mb-3 row">
            <div class="col-md-9 mx-0 px-0">
                <input name="Color" type="search" class="form-control" placeholder="Color" />
            </div>
            <div class="col-md-3 mx-0 px-0">
                <button type="submit" class="btn btn-outline-success">Buscar</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="BuscarPropietario" method="post" class="mb-3 row">
            <div class="col-md-9 mx-0 px-0">
                <input name="Propietario" type="search" class="form-control" placeholder="Propietario" />
            </div>
            <div class="col-md-3 mx-0 px-0">
                <button type="submit" class="btn btn-outline-success">Buscar</button>
            </div>
        </form>
    </div>
</div>


<table class="table table-hover">
    @if (Model !=null)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Propietario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longitud)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitud)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propietario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitud)
                    </td>
                    <td>
                         @Html.ActionLink("Edit", "Edit", new {  id=item.Placa  }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Placa  }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Placa  })
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Placa) </th>
                <th>@Html.DisplayNameFor(model => model.Color)</th>
                <th> @Html.DisplayNameFor(model => model.Propietario)</th>
                <th>@Html.DisplayNameFor(model => model.Longitud) </th>
                <th> @Html.DisplayNameFor(model => model.Latitud)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
        </tbody>
    }
</table>
